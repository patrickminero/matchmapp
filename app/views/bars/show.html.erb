<div class="container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.imgur.com/gcGB524.jpg);">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner rounded">
      <div class="carousel-item active ml-100">
        <%= cl_image_tag @bar.photos.first.key, height: 250, width: 500, crop: :fill, class:"d-block w-300" %>
      </div>
      <% if @bar.photos.second %>
        <div class="carousel-item">
          <%= cl_image_tag @bar.photos.second.key, height: 250, width: 500, crop: :fill, class:"d-block w-300" %>
        </div>
          <% elsif @bar.photos.third %>
            <div class="carousel-item">
              <%= cl_image_tag @bar.photos.third.key, height: 250, width: 500, crop: :fill, class:"d-block w-300" %>
            </div>
          <% end %>
      </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="container bg-white text-secondary">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <h3 class="font-weight-bold mr-2" style="font-size:25px;"><%= @bar.name %></h3>
        <% if @bar.availability == 'Many spaces' %>
          <i class="fas fa-check-circle text-success"></i>
        <% elsif @bar.availability == 'Few spaces' %>
          <i class="fas fa-exclamation-circle text-warning"></i>
        <% elsif @bar.availability == 'No spaces' %>
          <i class="fas fa-ban text-danger"></i>
        <% end %>
      </div>
      <div>
        <p class="bar-category"><%= @bar.category %></p>
      </div>
    </div>
      <div class="d-flex my-0">
        <div>
          <% if @bar.rating == 0 %>
            <p>Not rated yet</p>
          <% else %>
            <p><% @bar.rating.times do %><i class="fas fa-star text-primary"></i><% end %></p>
          <% end %>
        </div>
        <div>
        <p class="mb-0 ml-2"><%= pluralize @bar.reviews.size, "review" %></p>
        </div>
      </div>

      <div data-controller="availability">
      <p>Let others know how busy is <%= @bar.name %> </p>
        <div class="d-flex justify-content-around">
          <div>
            <%= form_with(url: color_vote_bar_path(@bar)) do  %>
              <%= hidden_field_tag :color, 'green' %>
              <button class="status-button active" data-availability-target="manyButton"  >
                <i class="fas fa-check-circle text-success text-muted" data-availability-target="many" id="many"></i>
                <p class="text-center">Many spaces</p>
              </button>
            <% end %>
          </div> 
          <div>
            <%= form_with(url: color_vote_bar_path(@bar)) do %>
              <%= hidden_field_tag :color, 'yellow' %>
              <button class="status-button" data-action="click->availability#status">
                <i class="fas fa-exclamation-circle text-warning" data-availability-target="few" id="few"></i>
                <p class="text-center">Few spaces</p>
              </button>
            <% end %>
          </div>
          <div>
            <%= form_with(url: color_vote_bar_path(@bar)) do %>
              <%= hidden_field_tag :color, 'red' %>
              <button class="status-button" data-action="click->availability#status">
                <i class="fas fa-ban text-danger" data-availability-target="none" id="none"></i>
                <p class="text-center">No spaces</p>
              </button>
            <% end %>
          </div> 
        </div>
      </div>

      <p class="pt-2"><%= @bar.description %></p>
      <%= link_to 'Get directions ', "http://maps.google.com?q=#{@bar.latitude},#{@bar.longitude}", class:"btn btn-primary rounded mb-2 col text-center"  %>
      <%= link_to "Book a seat", new_bar_booking_path(@bar), class:"btn btn-outline-primary rounded mt-2 col text-center"%>
      <p class="pt-2 mt-2 location-style"><%= @bar.address %></p>
      <%= link_to chatroom_path(@screening.chatroom) do %>
        <div>
          <button class="chat-button d-flex justify-content-center align-items-center w-100">
            <i class="far fa-comment-dots mx-2"></i>
            <p class="text-center">Chat with fans already at the bar</p>
          </button>
        </div>
      <% end %>
    <div data-controller="show-map" class="mt-3 mb-3" >
      <div id="map" data-show-map-target="map"
        style="width: 100%; height: 200px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <div id="reviews">
    <% if @bar.reviews.blank? %>
      Be the first to leave a review for <%= @bar.name %>
    <% else %>
      <% @bar.reviews.each do |review| %>
        <div class="card bg-light text-dark mb-2 pl-2 py-2 w-100 rounded">
          <p class="mb-0"><strong><%= review.content %></strong></p>
          <div class="d-flex justify-content-between align-items-end">
            <div>
              <p class="mb-1 rounded"><% review.rating.times do %><i class="fas fa-star text-primary"></i><% end %></p>
            </div>
            <div>
              <p class="mr-2 mb-0">- <%= review.user.name %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= simple_form_for([ @bar, @review ], remote: true) do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.input :rating, collection: 1..5 %>
      <%= f.button :submit, class:"btn btn-primary mb-3" %>
    <% end %>
  </div>
</div>
