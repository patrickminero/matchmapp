<div class="container">
  <%= link_to "< Back", root_path, class: "pl-1" %>
  <h1 class="pt-1"><%= @bar.name %></h1>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner rounded">
      <div class="carousel-item active ml-100">
        <%= cl_image_tag @bar.photos.first.key, height: 300, width: 400, crop: :fill, class:"d-block w-300" %>
      </div>
      <% if @bar.photos.second %>
        <div class="carousel-item">
          <%= cl_image_tag @bar.photos.second.key, height: 300, width: 400, crop: :fill, class:"d-block w-300" %>
        </div>
        <% elsif @bar.photos.third %>
          <div class="carousel-item">
            <%= cl_image_tag @bar.photos.third.key, height: 300, width: 400, crop: :fill, class:"d-block w-300" %>
          </div>
        <% end %>
    </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  <div class="pt-2">
    <h5 class="pt-2"><%= @bar.description %></h5>
    <p class="bar-category"><%= @bar.category %></p>
  </div>
   <p class="pt-2 location-style"><%= @bar.address %></p>
   <p class="mt-3"><% @bar.rating.times do %>☆<% end %></p>
  <div class="d-flex">
    <div class="form-simple" style="width:200px; height:40px;"  data-controller="status-change">
      <%= simple_form_for @bar, remote: true, data: {target: "status-change.form"}, method: :patch, authenticity_token: true do |b| %>
        <%= b.input :status, collection: [["Many spaces available", :many_spaces ], [ "Few spaces remaining", :few_spaces], ["No spaces left", :no_spaces]], label: 'Please update status', input_html: { data: { action: "change->status-change#newstatus" } }, include_blank: false %>
      <% end %>
    </div>
    <div class="bar p-3 mt-4" data-target="status-change.newstatus">
       <% if @bar.many_spaces? %>
         <span class="badge badge-success p-2">Many spaces available</span>
       <% elsif @bar.few_spaces? %>
         <span class="badge badge-warning p-2">Few spaces remaining</span>
       <% elsif @bar.no_spaces? %>
         <span class="badge badge-danger pb-1">No empty spaces available. <br> Please check later.</span>
       <% end %>
    </div>
  </div>
  <%= link_to "Book a seat", new_bar_booking_path(@bar), class:"btn btn-primary col text-center" %>
  <div data-controller="show-map" class="my-3" >
    <div id="map" data-target="show-map.map"
      style="width: 100%; height: 200px;"
      data-marker="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div> 
  
  

  <h5><strong><%= pluralize @bar.reviews.size, "review" %></strong></h5>
<div id="reviews">
  <% if @bar.reviews.blank? %>
    Be the first to leave a review for <%= @bar.name %>
  <% else %>
    <% @bar.reviews.each do |review| %>
    <div class="card bg-light text-dark mb-2 w-75 pl-2">
      <p class="pb-0 mb-1 rounded"><% review.rating.times do %>☆<% end %></p>
      <p><%= review.content %></p>
      </div>
    <% end %>
  <% end %>
  <%= simple_form_for([ @bar, @review ], remote: true) do |f| %>
    <%= f.input :content, as: :text %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.button :submit, class:"btn btn-primary mb-3" %>
  <% end %>
</div>

</div>

