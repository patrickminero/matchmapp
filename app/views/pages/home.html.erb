<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.imgur.com/TroN2YL.jpg);">
  <div class="container">
    <h1>Be there by kickoff!</h1>
    <h2>Find which bar is screening your match.</h2>
    <form novalidate="novalidate" class="simple_form search w-100 col text-center" action="/matches" accept-charset="UTF-8" method="get">
      <input name="utf8" type="hidden" value="&#x2713;" />
      <div class="search-form-control form-group" data-controller="algolia">
        <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Search by teams / game / bar"/>
        <input class="form-control string mt-3" placeholder="Type your location" type="hidden" name="location" id="bar_address" data-target="location.location algolia.location">
        <input type="hidden" name="latitude" data-target="location.latitudeInput">
        <input type="hidden" name="longitude" data-target="location.longitudeInput">
      </div>
      <button type="submit" class="btn btn-flat col text-center">Search</button>
    </form>

  <h4 class="pt-4 pl-3 font-weight-bold" style="color: white">Popular upcoming matches</h4>
      <% @matches.first(5).each do |match| %>
        <%= link_to match_bars_path(match) do %>
          <%= render "matches/match_card", match: match %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




