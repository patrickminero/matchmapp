<div class="container">
  <%= simple_form_for( @profile , remote: true) do |f| %>
    <%= f.input :name, as: :string %>
    <%= f.input :description, as: :text  %>
    <%= f.input :favourite_team, as: :text %>
    <%= f.input :favourite_sport, collection: SPORT_CATEGORY %>
    <%= f.button :submit, class:"btn btn-primary mb-3" %>
  <% end %>
</div> 

