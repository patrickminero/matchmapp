<div class="banner_edit">
  <div class="container_edit">
    <div class="pt-5">
      <%= simple_form_for( @profile , remote: true) do |f| %>
        <%= f.input :name, as: :string %>
        <%= f.input :description, as: :text  %>
        <%= f.input :favourite_team, collection: TEAM_CATEGORY, input_html: {class: "select2 w-100"} %>
        <%= f.input :favourite_sport, collection: SPORT_CATEGORY %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class:"btn btn-primary mb-3" %>
      <% end %>
    </div>
  </div> 
</div> 
