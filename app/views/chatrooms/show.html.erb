<div class="container chat-container">
  <h4 class="pt-3 chat-title"><%= @chatroom.name %></h4>
  <div id="messages" class="receiver chat-messages" data-chatroom-id="<%= @chatroom.id %>" data-current-user-id="<%= current_user.id %>">
    <% @chatroom.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>
  <div class="chat-form">
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message #{@chatroom.name}" %>
      <%= f.submit "Send", class:"btn btn-flat col text-center w-25" %>
    <% end %>
  </div>
</div>