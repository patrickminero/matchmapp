<div class="message-container my-3 <%= message.user.id == current_user.id ? "sender" : "receiver" %>" id="message-<%= message.id %>">
  <div class="speech-bubble">
    <i class="author">
      <div class="author-name">
        <span><%= message.user.name %></span>
      </div>
      <div>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </div>
    </i>
    <p><%= message.content %></p>
  </div>
</div>